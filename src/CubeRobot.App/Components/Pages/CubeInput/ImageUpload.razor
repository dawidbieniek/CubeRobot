<InputFile OnChange="HandleFileSelected" multiple />

<div class="row mt-3">
    @foreach (var image in uploadedImages)
    {
        <div class="col-md-4">
            <div class="card">
                <img src="@image.Preview" class="card-img-top" alt="@image.FileName" />
                <div class="card-body">
                    <h5 class="card-title">@image.FileName</h5>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<ImageFile> uploadedImages = new List<ImageFile>();

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        foreach (var file in e.GetMultipleFiles())
        {
            var image = new ImageFile
                {
                    FileName = file.Name,
                    Preview = await LoadImagePreview(file)
                };
            uploadedImages.Add(image);
        }
    }

    private async Task<string> LoadImagePreview(IBrowserFile file)
    {
        var buffer = new byte[file.Size];
        await file.OpenReadStream().ReadAsync(buffer);
        var imageDataUrl = $"data:{file.ContentType};base64,{Convert.ToBase64String(buffer)}";
        return imageDataUrl;
    }

    private class ImageFile
    {
        public string FileName { get; set; }
        public string Preview { get; set; }
    }
}